@model IEnumerable<RegistroJATICS.Models.Institucion>

@{
    ViewBag.Title = "Lista de Instituciones";
    int totalVisitantes = Model.Sum(ins=>ins.visitantesRegistrados);
}

<h2>Lista de Instituciones</h2>

<p>
    @Html.ActionLink("Agregar Institución", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.visitantesRegistrados)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.visitantesRegistrados)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Nombre }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Nombre }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Nombre })
        </td>
    </tr>
}

</table>
<strong>Total: </strong><span>@totalVisitantes</span>
